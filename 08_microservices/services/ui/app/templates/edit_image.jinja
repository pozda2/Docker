<form action="/admin/edit/{{image.id}}" method="post">
    {{ form.csrf_token }}

    <div class="row">
      {{ form.image_url(class="form-control", id="image_url", placeholder= "Image URL (required)" ) }}
    </div>

    <button type="submit" class="btn btn-primary">Save image</button>
    <a href="/admin" class="btn btn-primary "> Back </a>
</form>
